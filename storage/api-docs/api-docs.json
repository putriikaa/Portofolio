    "paths": {
        "/api/apigallery": {
            "get": {
                "tags": [
                    "Get Gallery Portofolio"
                ],
                "summary": "Gallery Ananda Kusuma Putri",
                "description": "Data Gallery",
                "operationId": "GetGallery",
                "responses": {
                    "default": {
                        "description": "successful operation"
                    }
                }
            },
            "post": {
                "tags": [
                    "gallery"
                ],
                "summary": "Create a new gallery",
                "description": "Create a new gallery with title, description, and optional image upload.",
                "operationId": "createGallery",
                "requestBody": {
                    "description": "Gallery details",
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "properties": {
                                    "title": {
                                        "description": "Gallery title",
                                        "type": "string",
                                        "example": "My Gallery"
                                    },
                                    "description": {
                                        "description": "Gallery description",
                                        "type": "string",
                                        "example": "A beautiful gallery"
                                    },
                                    "picture": {
                                        "description": "Image file",
                                        "type": "string",
                                        "format": "binary"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Gallery created successfully"
                    }
                }
            }
        },
        "/api/greet": {
            "get": {
                "tags": [
                    "greeting"
                ],
                "summary": "Returns a Sample API response",
                "description": "A sample greeting to test out the API",
                "operationId": "greet",
                "parameters": [
                    {
                        "name": "firstname",
                        "in": "query",
                        "description": "nama depan",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "lastname",
                        "in": "query",
                        "description": "nama belakang",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "default": {
                        "description": "successful operation"
                    }
                }
            }
        }
    }
}